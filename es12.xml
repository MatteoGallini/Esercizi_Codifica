                                <unclear facs="#LL1.24_line_1r_10" reason="illegible"/> <!-- Firma in verticale --> 
                                <add hand="scribe2" facs="#LL1.24_line_1r_11"> <!--Aggiunta fatta in seconda battuta da una seconda mano--> 
