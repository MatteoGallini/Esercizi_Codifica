            <text type="minuta di lettera" xml:id="LL1.24-II" subtype="manuscript" n="LL1.24-II"> <!--Rappresentazione testuale del testo-->
                <body xml:lang="fr"> <!--Body in lingua francese-->
                    <div type="recto"> <!--Div contenente recto della lettera-->
                        <pb n="2" xml:id="LL1.24_fol_1r" facs="#LL1.24_folio_1r"/> <!-- Seconda pagina dello stesso foglio-->
                        <div type="letter-body" n="t_02"> 				
                            <ab type="parag"  n="ab_03"> <!--Paragragfo-->
                                <s type="sentence" n="s_06"> <!--Frasi-->
                                    <lb xml:id="LL1.24_lb_1r_01" n="1" facs="#LL1.24_line_1r_01"/> <!--Riga-->
                                    en assurant 
                                    <persName ref="#PFL">
                                        <choice>
                                            <abbr type="title">
                                                M:r
                                            </abbr>
                                                <expan>M<ex>iste</ex>r</expan>
                                        </choice>
                                        Laporte
                                    </persName>  
                                    , qui
                                    <lb xml:id="LL1.24_lb_1r_02" n="2" facs="#LL1.24_line_1r_02"/> <!--Riga-->
                                    vous lui rendra à sa premiere demande,
                                    <lb xml:id="LL1.24_lb_1r_03" n="3" facs="#LL1.24_line_1r_03"/> <!--Riga-->
                                    <gap reason="cancelled" extent="several characters"/> <!--Parola rovinata non leggibile--> 
                                    qui dans ce moment est
                                    <lb xml:id="LL1.24_lb_1r_04" n="4" facs="#LL1.24_line_1r_04"/> <!--Riga-->
                                    necessaire pour vous comme per
                                    <lb xml:id="LL1.24_lb_1r_05" n="5" facs="#LL1.24_line_1r_05"/> <!--Riga-->
                                    le theatre,
                                    <del rend="overtype"> <!--Parola cancellata-->
                                        plaisir qui
                                    </del>
                                    je suis
                                    <lb xml:id="LL1.24_lb_1r_06" n="6" facs="#LL1.24_line_1r_06"/> <!--Riga-->
                                    sûre qui ne vous
                                    <choice> <!--Correzione parola dalle note da RIFUSERA a REFUSERA-->
                                        <orig>rifusera </orig>
                                        <reg resp="#GS">refusera</reg>
                                    </choice> 
                                    <ptr target="#LL1_24-II_note1"/> 
                                    <damage><!--Parte di testo danneggiata per sfregamento-->
                                        de
                                    </damage>
                                    <lb xml:id="LL1.24_lb_1r_07" n="7" facs="#LL1.24_line_1r_07"/> <!--Riga-->
                                    vous faire ce plaisir –
                                    
                                </s>
                            </ab>
                        </div>

                        <div type="closer" n="c_01"> <!--Chiusura della lettera-->
                            <salute n="ab_04">
                                <s type="sentence" n="s_07">
                                    <lb xml:id="LL1.24_lb_1r_08" n="8" facs="#LL1.24_line_1r_08"/> <!--Prima parte chiusura-->
                                    Milles amitiés de
                                    <lb xml:id="LL1.24_lb_1r_09" n="9" facs="#LL1.24_line_1r_09"/> <!--Seconda parte chiusura-->
                                    <hi rend="align(right)">
                                        <persName ref="#VB" role="composer">
                                            votre
                                        </persName>
                                    </hi>							
                                </s>
                            </salute>
                        </div>
                        <div xml:id="aggiunte"> <!--3 segni grafici in fondo al recto-->
