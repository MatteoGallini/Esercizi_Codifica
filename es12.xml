	<text type="minuta di lettera" xml:id="LL1.24" subtype="manuscript" n="LL1.24"> <!--Rappresenta il testo-->
        <group> <!--Raggruppa testi diversi-->
            <text type="minuta di lettera" xml:id="LL1.24-I" subtype="manuscript" n="LL1.24-I">
                <body xml:lang="it"> <!--Il corpo del testo--> 
                    <div type="fronte"> <!--Indica la porzione di testo del fronte della lettera-->
                        <pb n="1" xml:id="LL1.24_fol_1f" facs="#LL1.24_folio_1f"/> <!--Indica la pagina della lettera-->
                        <div type="letter-body" n="t_01"> <!--Contiene il corpo della lettera-->
                            <salute  n="ab_01"> <!--Contiene i saluti iniziali della lettera-->
                                <s type="sentence" n="s_01"> <!--Suddivide in frasi-->
                                    <lb xml:id="LL1.24_lb_1f_01" n="1" facs="#LL1.24_line_1f_01"/> <!--Da il riferimeto tra immagine e testo-->
                                    <hi rend="align(left)"> <!--Seleziona una parola distintiva all'interno del testo, in questo caso allineata a sinistra-->
                                            <persName ref="#Unknown">Signore</persName> <!--Rifermento della persona a una parola del testo-->
                                            <ptr target="#LL1_24_note1"/> <!--Puntatore che si riferisce alla nota indicata-->
                                    </hi>
                                </s>
                            </salute>

                            <ab type="parag"  n="ab_02"> <!--Contenitore di testo di tipologia paragrafo-->
                                <unclear reason="illegible" facs="#LL1.24_line_1f_18"/>  <!--Annotazione non leggibile in alto a destra-->
                                <s type="sentence" n="s_02">
                                    <lb xml:id="LL1.24_lb_1f_02" n="2" facs="#LL1.24_line_1f_02"/>
                                    <hi rend="align(left)">
                                            <del rend="dotted">Affari</del> <!--Parola cancellata all'interno del testo, tratteggiata-->
                                    </hi>
                                </s>
                                <s type="sentence" n="s_03">
                                    <lb xml:id="LL1.24_lb_1f_03" n="3" facs="#LL1.24_line_1f_03"/>
                                    Non creda essere stata trascuratezza
                                    <lb xml:id="LL1.24_lb_1f_04" n="4" facs="#LL1.24_line_1f_04"/>
                                    il non averla subito riscontrata.
                                </s>
                                <s type="sentence" n="s_04">
                                    <lb xml:id="LL1.24_lb_1f_05" n="5" facs="#LL1.24_line_1f_05"/>
                                    Dipendea dalla piega che poteano
                                    <lb xml:id="LL1.24_lb_1f_06" n="6" facs="#LL1.24_line_1f_06"/>
                                    prendere i miei affari musicali a
                                    <lb xml:id="LL1.24_lb_1f_07" n="7" facs="#LL1.24_line_1f_07"/>
                                    <placeName ref="#Paris">
                                        Parigi
                                    </placeName> 
                                    il dare una speranza al
                                    <lb xml:id="LL1.24_lb_1f_08" n="8" facs="#LL1.24_line_1f_08"/>
                                    suo amico 
                                    <subst> <!--Indica la sotituzione-->
                                        <del rend="overtype">
                                            poeta
                                        </del>
                                        <add place="above"> <!--Parola aggiunta-->
                                            <choice> <!--Scegli tra la versione abbreviata o intera-->
                                                <abbr type="title">
                                                    Sig:r
                                                </abbr>
                                                <expan>Sig<ex>no</ex>r<ex>e</ex></expan>
                                            </choice>
                                        </add>
                                    </subst> 
                                    <persName ref="#PB">Beltrame</persName>
                                    <ptr target="#LL1_24_note2"/>
                                    ,  trovando
                                    <lb xml:id="LL1.24_lb_1f_09" n="9" facs="#LL1.24_line_1f_09"/>
                                    <add place="above">
                                        il suo poema
                                    </add>
                                    in diverse parti eccellente; ma
                                    <lb xml:id="LL1.24_lb_1f_10" n="10" facs="#LL1.24_line_1f_10"/>
                                    vedo che passeranno molti anni perché
                                    <lb xml:id="LL1.24_lb_1f_11" n="11" facs="#LL1.24_line_1f_11"/>
                                    io abbia il piacere 
                                    <subst>
                                        <del rend="overtype">
                                            discrivere
                                        </del>
                                        <add place="above">
                                            mettere in musica
                                        </add>
                                    </subst>
                                    <subst>
                                        <del rend="overtype">
                                            opere
                                        </del>
                                        <add place="above">
                                            <del>
                                                libretti
                                            </del>
                                        </add>
                                    </subst>
                                    <lb xml:id="LL1.24_lb_1f_12" n="12" facs="#LL1.24_line_1f_12"/>
                                    <term ref="#opera" subtype="music-term">Opere</term> italiane; mentre ora mi conviene
                                    <lb xml:id="LL1.24_lb_1f_13" n="13" facs="#LL1.24_line_1f_13"/>
                                    scrivere per l’idioma francese.
                                </s>
                                <s type="sentence" n="s_05">
                                    <lb xml:id="LL1.24_lb_1f_14" n="14" facs="#LL1.24_line_1f_14"/>
                                    <subst>
                                        <del rend="overtype">
                                        Rimetterò
                                        </del>
                                        <add place="above">
                                            <del>
                                                Consegnerò
                                            </del>
                                        </add>
                                    </subst> 
                                    alla <orgName ref="#CH">Casa Halgen</orgName> il
                                    <lb xml:id="LL1.24_lb_1f_15" n="15" facs="#LL1.24_line_1f_15"/>
                                    <subst>
                                        <del rend="overtype">
                                        	<term subtype="music-term" ref="#libretto">libretto</term>
                                        </del>
                                        <add place="above">
                                            Dramma
                                        </add>   
                                    </subst> 
                                    <del rend="overtype">
                                        perché gli sia inviato con
                                    </del>
                                    <lb xml:id="LL1.24_lb_1f_16" n="16" facs="#LL1.24_line_1f_16"/>
                                    <persName ref="#Unknown">Ella</persName><ptr target="#LL1_24_note3"/>, o Signore, gradisca gli attestati
                                    <lb xml:id="LL1.24_lb_1f_17" n="17" facs="#LL1.24_line_1f_17"/>
                                    della mia stima e considerazione
                                </s>						
                            </ab>
                        </div>
                    </div>
                    
                            
                </body>
    
                <back>  <!--Definisce l'appendice del fronte-->
                    <div type="notes"> <!--Indica le note-->
                        <div type="ann_notes">
                            <note xml:id="LL1_24_note1" resp="#MG"> <!--Singola nota-->
                                <p>
                                    <persName ref="#VB" role="composer">Bellini</persName> si riferisce ad un destinatario sconosciuto chiamandolo Signore. 
                                </p>
                            </note>
                            <note xml:id="LL1_24_note2" resp="#EC" source="#Seminara2017" ana="857">
                                <p>
                                    <persName ref="#VB" role="composer">Bellini</persName> si riferiva al poeta <persName ref="#PB" role="librettist">Pietro Beltrame</persName> (<placeName ref="#VE">Venezia</placeName>, <date when="1810" resp="#GS" cert="low">1810</date> ca. - dopo il <date when="1840" resp="#GS" cert="low">1840</date>). Autore del <term ref="#libretto">libretto</term> de <rs type="work">La fidanzata di Lammermoor</rs> (dal romanzo di <persName ref="#WS">Walter Scott</persName> <foreign xml:lang="eng">The Bride of Lammermoor</foreign>), messa in musica da <persName ref="#AM">Alberto Mazzucato</persName> e rappresentata al <orgName ref="#TN">Teatro Nuovissimo</orgName> di <placeName ref="#PD">Padova</placeName> il <date when="24-02-1834" resp="#GS" cert="low">24 febbraio 1834</date>, scrisse un’ode <rs type="work">A Vincenzo Bellini</rs>, che venne pubblicata su «L’Eco» di <placeName ref="#MI">Milano</placeName> il <date when="1835-05-18">18 maggio 1835</date>.
                                </p>
                            </note>
                            <note xml:id="LL1_24_note3" resp="#MG">
                                <p>
                                    <persName ref="#VB" role="composer">Bellini</persName> si riferisce ad un destinatario sconosciuto chiamandolo Ella. 
                                </p>
                            </note>
                        </div>

